<div class="container">
	<h2>Follower Users</h2>

<table class="table">
  <thead>
	  	<tr>
	     <th>image</th>
	     <th>name</th>
	     <th colspan="3"></th>
	    </tr>
  </thead>
	  <tbody>
	  	<% @user.followers.each do |user| %>
	  	<tr>
		   <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
		    <td><%= user.name %></td>
            <td>フォロー数：<%= link_to user.followings.count,following_user_path(user) %></td>
			<td>フォロワー数：<%= link_to user.followers.count, followers_user_path(user)%></td>
			<td><%= render 'follow_form', user: user %></td>
		  <td><%= link_to 'Show', user_path(user) %></td>
		</tr>
		<% end %>
	  </tbody>
</table>
</div>